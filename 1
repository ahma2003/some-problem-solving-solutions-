Question link : https://codeforces.com/contest/1814/problem/A


Solution :
#include<iostream>
#include<queue>
#include<stack>
#include<deque>
#include<algorithm>
#include<vector>
#include<cmath>
#include<string>
#include<iomanip>
#include<map>
#include<set>
#include<bitset>
#define ll long long
using namespace std;
void  lol() {
    ios_base::sync_with_stdio(false);
    cout.tie(NULL);
    cin.tie(NULL);
}
 
int main() {
 lol();
 ll t;
 cin>>t;
  while (t--) {
        ll n,k;
  cin>>n>>k;
        if (k > n) {
            if (n % 2 == 0) {
                cout << "YES\n";
            }
            else {
                cout << "NO\n";
            }
        }
        else if (k==n) {
            cout << "YES\n";
        }
        else {
            if ((n - k) % 2 == 0 || (n - k) % k == 0 ||n%2==0) {
                cout << "YES\n";
            }
            else {
                cout << "NO\n";
            }
        }
    }
}
